<section class="container mx-auto px-4 md:px-12">

  <div class="flex flex-col relative p-3 my-1 px-1 w-full md:w-1/2 lg:my-4 lg:w-1/3 lg:w-1/4 content-card items-center h-500 {{ block.settings.card_bg_color }}">
    <div class="flex flex-col items-center absolute left-3 right-3 top-3">
      <img class="" src="{{ section.settings.image_src | img_url: '200x200'}}" />
    </div>
    <div id="card-text" class="px-6 py-4 flex-col">
      <div class="font-bold text-xl mb-2">The Coldest Sunset</div>
      <p class="text-gray-700 text-base">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptatibus quia, nulla! Maiores et perferendis eaque, exercitationem praesentium nihil.
      </p>
    </div>
  </div>

</section>

<style>
  .content-card {
    /* background-color:{{ section.block.card_bg_color }};*/
    background-color: aquamarine;
  }
</style>

{% schema %}
  {
    "name": "Content Cards",
    "tag": "section",
    "class": "section section-content-cards",
    "limit": 1,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Slideshow"
      }
    ],
    "max_blocks": 4,
    "blocks": [
      {
        "name": "Slide",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Cards",
        "settings": {
          "title": "Content Cards"
        },
        "blocks": [
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}