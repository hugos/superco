        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Cards",
        "settings": {
          "title": "Content Cards"
        },
        "blocks": [
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
