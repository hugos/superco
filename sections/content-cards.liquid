<section class="container mx-auto px-4 md:px-12 md:grid md:grid-cols-4">
  {%- for block in section.blocks -%}
    <div class="flex flex-col relative p-3 my-1 px-1 content-card items-center h-[433px] w-[332px] {{ block.settings.card_bg_color }}">
      <div class="flex flex-col absolute left-3 right-3 top-3">
        <img class="h-[200px]" src="{{ section.settings.image_src | img_url: '200x200'}}" />
      </div>
      <div id="card-text" class="flex-col flex items-center  top-[260px] absolute translate-x[-50%] gap-2 text-black w-10/12">
        <div class="text-3xl font-GTlight">
          h{{ block.settings.heading | escape }}
        </div>
        <div class="flex-col items-center gap-4 text-center text-sm">
          <div>Once youâ€™ve chosen a scene, you can dial it up with fun a la carte add-ons.</div>
        </div>
        <div class="flex-col items-center font-PT-r font-medium gap-4 text-center text-sm uppercase">
          <div>SHOP PARTY SUPPLIES</div>
          <div class="card-bottom"></div>
        </div>
      </div>
    </div>
  {% endfor %}
</section>

<style>
  .content-card {
    /* background-color:{{ section.block.card_bg_color }};*/
    background-color: aquamarine;
  }
</style>

{% schema %}
  {
    "name": "Content Cards",
    "tag": "section",
    "class": "section",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Card Block"
      }
    ],
    "blocks": [
      {
        "type": "card_block",
        "name": "Card Block",
        "settings": [
          {
            "id": "heading",
            "type": "text",
            "label": "Card Heading"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Cards",
        "settings": {
          "title": "Content Cards"
        },
        "blocks": [
          {
            "type": "card_block"
          }, {
            "type": "card_block"
          }
        ]
      }
    ]
  }
{% endschema %}