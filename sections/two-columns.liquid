{{ 'section-cards.css' | asset_url | stylesheet_tag }}

<section class="container max-w-screen-2xl mx-auto px-4 md:px-12 lg:grid grid-cols-2">
  {%- for block in section.blocks -%}
    <div class="w-full mb-12 mt-12">
      {% capture background_color %}
        {{ block.settings.background }}{% endcapture %}
      <div class="flex flex-col m-auto mb-20 relative p-3 my-1 px-1 content-card items-center h-[800px] w-[672px]">
        <div class="flex flex-col absolute left-3 right-3 top-3 h-[800px]">
          <img class="object-cover min-h-full" src="{{ block.settings.image | img_url: '2000x2000'}}" />
          <div id="card-text" class="flex-col flex items-center bottom-14 w-full absolute translate-x[-50%] gap-2 text-black">
            <div class="flex-col items-center font-GTlight gap-4 text-center text-6xl">
              <div>{{ block.settings.content_text }}</div>
            </div>
            <div class="flex-col items-center font-PT-r tracking-widest mt-3 font-medium gap-4 text-center text-sm uppercase">
              <div>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text | escape }}</a>
              </div>
              <div class="card-bottom"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
  {
    "name": "Two Columns",
    "tag": "section",
    "class": "section",
    "max_blocks": 2,
    "blocks": [
      {
        "type": "card_block",
        "name": "Card Block",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Card Image"
          },
          {
            "id": "content_text",
            "type": "text",
            "label": "Content Text",
            "default": "Write something that can cultivate your clients interest about your brand."
          },
          {
            "id": "link_text",
            "type": "text",
            "label": "Text",
            "default": "SHOP"
          }, {
            "id": "link",
            "type": "url",
            "label": "Text URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Two Columns",
        "blocks": [
          {
            "type": "card_block"
          }, {
            "type": "card_block"
          }
        ]
      }
    ]
  }
{% endschema %}